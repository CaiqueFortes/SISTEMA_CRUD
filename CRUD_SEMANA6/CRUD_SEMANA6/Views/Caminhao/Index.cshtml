@model List<CaminhaoModel>
@{
    ViewData["Title"] = "Listagem de Caminhões";
}
<div class="text-center">

    <div class="d-grip gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Caminhao" asp-action="Criar">Adicionar novo caminhão</a>
    </div>
    
    <br />
    <h1 class="display-4">Listagem de Caminhões</h1>

    <table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nome</th>
      <th scope="col">Descrição</th>
      <th scope="col">Data de Criação</th>
       <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (CaminhaoModel caminhao in Model)
                {
                        <tr>
                            <th scope="row">@caminhao.ID</th>
                            <td>@caminhao.Nome</td>
                            <td>@caminhao.Descricao</td>
                            <td>@caminhao.DatadeCriacao</td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                  <a role="button" class="btn btn-primary" asp-route-id="@caminhao.ID" asp-controller="Caminhao" asp-action="Editar">Editar</a>
                                  <a role="button" class="btn btn-danger" asp-route-id="@caminhao.ID" asp-controller="Caminhao" asp-action="ApagarConfirmacao">Apagar</a>
                                </div>
                            </td>
                        </tr>
                }
            }
        </tbody>
</table>

</div>


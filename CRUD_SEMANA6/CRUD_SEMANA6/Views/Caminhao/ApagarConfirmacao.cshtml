@model CaminhaoModel
@{
    ViewData["Title"] = "Confirmação para apagar o caminhão";
}
<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary" role="button" asp-controller="Caminhao" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger" role="button" asp-controller="Caminhao" asp-action="Apagar" asp-route-id="@Model.ID">Confirmar exclusão</a>